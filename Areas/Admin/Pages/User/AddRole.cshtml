@page "/admin/add-role/{id}"
@model AddRoleModel
@{
    ViewData["Title"] = "Thêm vai trò";
}

<h2>@ViewData["Title"]: @Model.user.UserName</h2>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleNames" ></label>
                @Html.ListBoxFor(m => m.RoleNames, Model.allRoles, new{
                    id = "id-select-role",
                    @class = "w-100"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary mt-2" >Danh sách user</a>
        </form>
        <hr>
        <p> Các Claim của user có từ role</p>
        @if (Model.claimInRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimInRole)
                {
                    <li>@claim.ClaimType: @claim.ClaimValue</li>
                }
            </ul>
        }
        <hr>
        <p> Các Claim của riêng user:
            <a asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.user.Id" >+ Thêm Claim riêng của user </a>    
        </p>
        @if (Model.claimInUserRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimInUserRole)
                {                    
                    <li>
                        <a asp-page="./EditUserRoleClaim" asp-page-handler="EditClaim" asp-route-claimid="@claim.Id" >       
                            @claim.ClaimType: @claim.ClaimValue
                        </a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css">

    <script>
        $("#id-select-role").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
